name: Build Android APK

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up JDK 11
        uses: actions/setup-java@v3
        with:
          java-version: '11'
          distribution: 'temurin'
          cache: 'gradle'

      - name: Build with Gradle
        run: |
          # Create a dummy gradlew file because we don't have one
          touch gradlew
          chmod +x gradlew
          # Use a gradle wrapper to build
          gradle wrapper
          ./gradlew assembleDebug
        working-directory: ./app

      - name: Upload APK
        uses: actions/upload-artifact@v3
        with:
          name: UDPPRO-apk
          path: app/build/outputs/apk/debug/app-debug.apk
